{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Sysmodule Debug",
			"type": "shell",
			"promptOnClose": true,
			"command": "make sysmodule DINFO=1",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"problemMatcher": [
				{
					"base": "$gcc",
					"fileLocation": [
						"autoDetect",
						"${workspaceFolder}"
					]
				}
			]
		},
		{
			"label": "Build Sysmodule Release",
			"type": "shell",
			"promptOnClose": true,
			"command": "make sysmodule BUILD_TYPE=release",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"problemMatcher": [
				{
					"base": "$gcc",
